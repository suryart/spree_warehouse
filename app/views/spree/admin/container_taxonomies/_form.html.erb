<div data-hook="admin_inside_container_taxonomy_form">
  <%= f.field_container :name do %>
    <%= f.label :name, t(:name) %><span class="required">*</span><br />
    <%= error_message_on :container_taxonomy, :name, :class => 'fullwidth title' %>
    <%= text_field :container_taxonomy, :name %>
  <% end %>

  <%= f.field_container :warehouse_id do %>
    <%= f.label :warehouse_id, t(:warehouse) %><span class="required">*</span><br />
    <%= error_message_on :container_taxonomy, :warehouse_id, :class => 'fullwidth title' %>
    <%= select "container_taxonomy", "warehouse_id", Spree::Warehouse.all.collect {|w| [ w.name, w.id ] }, { :include_blank => true } %>
  <% end %>
</div>